{
  "name": "@tinyrpc/server",
  "version": "0.4.1",
  "tasks": {
    "generate:ai-docs": "deno doc --json ./*.ts >> ./ai-docs.json",
    "generate:docs": "rm -rf docs && deno doc --html ./*.ts"
  },
  "exports": {
    ".": "./mod.ts",
    "./types": "./types.ts",
    "./utils": "./utils.ts",
    "./datatypes": "./datatypes.ts"
  },
  "imports": {
    "@online/is": "jsr:@online/is@^0.0.6",
    "@online/miniserializer": "jsr:@online/miniserializer@^0.0.6",
    "@online/serve": "jsr:@online/serve@^0.0.2",
    "@std/encoding": "jsr:@std/encoding@^1.0.10",
    "@std/assert": "jsr:@std/assert@^1.0.14",
    "@std/http": "jsr:@std/http@^1.0.20",
    "@dx/reflect": "jsr:@dx/reflect@^0.2.15",
    "@tinyrpc/sdk-core": "jsr:@tinyrpc/sdk-core@^0.2.0"
  },
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "fmt": {
    "lineWidth": 130,
    "singleQuote": false,
    "semiColons": true
  }
}
